<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">


    <Button
            android:text="Save Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/studentBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="132dp"
            android:layout_marginStart="132dp"/>
    <Button
            android:text="Save Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bookBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/studentBtn"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Rent Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rentingBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookBtn" android:layout_marginTop="44dp"/>
    <Button
            android:text="Show All Books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/showBooksBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rentingBtn"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Search Book"
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/showBooksBtn"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>