<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SaveStudent">

    <EditText
            android:id="@+id/nameEdtTxt"
            android:layout_width="209dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/name"/>
    <EditText
            android:id="@+id/surnameEdtTxt"
            android:layout_width="209dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/surname"
            app:layout_constraintTop_toBottomOf="@+id/nameEdtTxt" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="Dodaj studenta"
            android:id="@+id/saveBtn"
            android:layout_width="193dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surnameEdtTxt" android:layout_marginTop="60dp"/>

    <Button
            android:text="Menu"
            android:id="@+id/menuBtn"
            android:layout_width="193dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surnameEdtTxt" android:layout_marginTop="380dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>