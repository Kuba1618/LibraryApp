<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginLeft="35dp"
                                                   android:layout_marginRight="35dp"
                                                   android:layout_centerHorizontal="true"
                                                   android:layout_marginTop="27dp"
                                                   tools:ignore="ExtraText">


    <TextView
            android:id="@+id/titleBookTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="@color/green_popular"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"/>
    <TextView
            android:id="@+id/authorBookTv"
            android:layout_width="339dp"
            android:layout_height="31dp"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:text="@string/author"
            android:textAlignment="center"
            android:textColor="@color/green_popular"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>